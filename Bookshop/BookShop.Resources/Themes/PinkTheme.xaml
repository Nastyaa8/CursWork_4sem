<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="ThemeBrush" Color="#FFE66666"/>
    <SolidColorBrush x:Key="ButtonBrush" Color="#FFFDC9C9"></SolidColorBrush>
    
    <Style TargetType="Button">
        <Setter Property="Background" Value="#FFFDC9C9"/>
        <Setter Property="Padding" Value="10 5"></Setter>
    </Style>
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="#FFE66666"></Setter>
    </Style>
    
</ResourceDictionary>