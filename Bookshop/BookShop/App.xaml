<Application x:Class="BookShop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookShop.Resources;component/ResourceDictionaries/BaseTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/BookShop.Resources;component/Themes/PinkTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/BookShop.Resources;component/ResourceDictionaries/lang.ru-RU.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
